doctype html
html(lang='en')
  head
    meta(http-equiv='content-type', content='text/html;charset=utf-8')
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width,initial-scale=1,shrink-to-fit=no')
    title #{title}
    style.
      @keyframes hidePreloader {
      0% {
      width: 100%;
      height: 100%
      }
      100% {
      width: 0;
      height: 0
      }
      }
      body>div.preloader {
      position: fixed;
      background: #fff;
      width: 100%;
      height: 100%;
      z-index: 1071;
      opacity: 0;
      transition: opacity .5s ease;
      overflow: hidden;
      pointer-events: none;
      display: flex;
      align-items: center;
      justify-content: center
      }
      body:not(.loaded)>div.preloader {
      opacity: 1
      }
      body:not(.loaded) {
      overflow: hidden
      }
      body.loaded>div.preloader {
      animation: hidePreloader .5s linear .5s forwards
      }
    script.
      window.addEventListener("load", function() {
      setTimeout(function() {
      document.querySelector("body").classList.add("loaded")
      }, 300)
      })
    link(rel='icon', href='../assets/img/brand/favicon.png', type='image/png')
    link(rel='stylesheet', href='../assets/libs/fortawesome/fontawesome-free/css/all.min.css')
    link#stylesheet(rel='stylesheet', href='../assets/css/quick-website.css')
  body
    .preloader
      .spinner-border.text-primary(role='status')
        span.sr-only Loading...
    section.slice.py-5.bg-section-secondary
      .container
        .row
          .col-md-3
            .mb-4
              h5.mb-0.mb-md-3 Учебные группы
              ul.nav.nav-menu.overflow-x.flex-nowrap.flex-md-column.mx-n2
                li.nav-item.px-2
                  .dropdown.m-2
                    button.btn.btn-sm.btn-secondary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') УВА
                    .dropdown-menu
                      a.dropdown-item(href='#') 1 курс
                      a.dropdown-item(href='#') 2 курс
                      a.dropdown-item(href='#') 3 курс
                      a.dropdown-item(href='#') 4 курс
                li.nav-item.px-2
                  .dropdown.m-2
                    button.btn.btn-sm.btn-secondary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') УИС
                    .dropdown-menu
                      a.dropdown-item(href='#') 1 курс
                      a.dropdown-item(href='#') 2 курс
                      a.dropdown-item(href='#') 3 курс
                      a.dropdown-item(href='#') 4 курс
                li.nav-item.px-2
                  .dropdown.m-2
                    button.btn.btn-sm.btn-secondary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') УВВ
                    .dropdown-menu
                      a.dropdown-item(href='#') 1 курс
                      a.dropdown-item(href='#') 2 курс
          .col-md-9
            .row.align-items-center.mb-4
              .col
                h1.h5.mb-0 #{title}
              if userInfo.securityRole.includes("superadmin") || userInfo.securityRole.includes("teacher")
              a(href="/disciplines/create/")  
                .col-auto
                  button.btn.btn-sm.btn-primary.btn-icon(type='button')
                    span.btn-inner--text Добавить
                    span.btn-inner--icon
                      i(data-feather='plus')
            .row.mx-n2
              each disc in disciplines 
                .col-sm-6.col-lg-4.px-2
                  .card.mb-3
                    .card-header.pb-3
                      .d-flex.justify-content-between.align-items-center
                        div
                          span.h6
                        .text-right
                          a.action-item.mr-2(href=urlDiscDetail+disc.allias, data-toggle='tooltip', title='Просмотр')
                            i(data-feather='external-link')
                    .card-body.pt-0
                      .d-flex.justify-content-between.align-items-center
                        .text-right
                          .d-flex.align-items-center
                            .pl-2
                              small.h6
                      .mt-3
                        h6.mb-0 #{disc.name}
                        p.mb-0.text-sm.text-muted #{disc.mnemo}
              else 
                p There are no disciplines.
