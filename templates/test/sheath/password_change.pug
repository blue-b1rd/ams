doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width,initial-scale=1,shrink-to-fit=no')
    title #{title}
    style.
      @keyframes hidePreloader {
      0% {
      width: 100%;
      height: 100%
      }
      100% {
      width: 0;
      height: 0
      }
      }
      body>div.preloader {
      position: fixed;
      background: #fff;
      width: 100%;
      height: 100%;
      z-index: 1071;
      opacity: 0;
      transition: opacity .5s ease;
      overflow: hidden;
      pointer-events: none;
      display: flex;
      align-items: center;
      justify-content: center
      }
      body:not(.loaded)>div.preloader {
      opacity: 1
      }
      body:not(.loaded) {
      overflow: hidden
      }
      body.loaded>div.preloader {
      animation: hidePreloader .5s linear .5s forwards
      }
    script.
      window.addEventListener("load", function() {
      setTimeout(function() {
      document.querySelector("body").classList.add("loaded")
      }, 300)
      })
    link(rel='icon', href='../../../assets/img/brand/favicon.png', type='image/png')
    link(rel='stylesheet', href='../../../assets/libs/fortawesome/fontawesome-free/css/all.min.css')
    link#stylesheet(rel='stylesheet', href='../../../assets/css/quick-website.css')
  body
    .preloader
      .spinner-border.text-primary(role='status')
        span.sr-only Loading...
    .container.d-flex.flex-column
      .row.align-items-center.justify-content-center.min-vh-100
        div
          form(action="" method="POST")
            h5.mb-4 #{title}
            if errorMessage.length
              p(style="color: red") #{errorMessage}
            .row
              .col-md-6
                .form-group
                  label.form-control-label Старый пароль
                  input#oldpass.form-control(type='password' name="oldpass" placeholder="Ваш новый пароль" required="true")
            .row
              .col-md-6
                .form-group
                  label.form-control-label Новый пароль
                  input#newpass1.form-control(type='password' name="newpass1" placeholder="Ваш новый пароль" required="true")
              .col-md-6
                .form-group
                  label.form-control-label Подтверждение пароля
                  input#newpass2.form-control(type='password' name="newpass2" placeholder="Ваш новый пароль" required="true")
            .mt-3.text-right
              a.btn.btn-sm.btn-neutral(href='#') Я забыл свой пароль
              input.btn.btn-sm.btn-primary(type='submit' value="Сохранить")
