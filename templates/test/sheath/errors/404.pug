doctype html
html(lang="en")
    head
        title Error #{code} #{title}
        style(type='text/css').
            body {
                font-family: "Arial", sans-serif;
                font-size: 14px;
            }

            div {
                position: absolute;
                top: 50%;
                width: 100%;
                height: 90px;
                margin-top: -45px;
                text-align: center;
            }

            h1 {
                font-size: 50px;
                margin: 0;
                font-weight: 600;
            }

            p {
                margin: 10px 0 0 0;
                opacity: .7;
            }
    body
        div
            h1 404
            p There is no page at #{url}